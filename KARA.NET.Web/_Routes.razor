<CascadingAuthenticationState>
    <Router AppAssembly="AssemblyUtils.Entry">
        <Found Context="context">
            <RouteView RouteData="context" DefaultLayout="typeof(_Layout)" />
            <FocusOnNavigate RouteData="context" Selector="h1" />
        </Found>
        <NotFound>
            <LayoutView Layout="typeof(_Layout)">
                <RadzenLabel Text="page not found" />
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>