@page "/"
<RadzenStack>
    <AuthorizeView>
        <Authorized>
            <RadzenLabel Text="@($"authorized as {context.User.Identity.Name}")" />
        </Authorized>
        <NotAuthorized>
            <RadzenLabel Text="not authorized" />
        </NotAuthorized>
    </AuthorizeView>
    <AuthorizeView Roles="Admin">
        <RadzenLabel Text="you are an admin" />
    </AuthorizeView>
</RadzenStack>